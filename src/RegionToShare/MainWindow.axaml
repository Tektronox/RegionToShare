<Window x:Class="RegionToShare.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Region to Share - Linux Port (Testing)"
        Height="400" Width="600"
        MinHeight="200" MinWidth="300"
        Background="Black" Foreground="White">
  
  <StackPanel Margin="20">
    <TextBlock Text="RegionToShare - Linux Port Setup Test" 
               FontSize="18" 
               FontWeight="Bold" 
               Margin="0,0,0,20"/>
    
    <TextBlock Text="This is a basic test window to verify Avalonia setup." 
               Margin="0,0,0,10"/>
    
    <TextBlock Text="Project Status:" 
               FontWeight="Bold" 
               Margin="0,10,0,5"/>
    
    <TextBlock Text="✅ .NET 8 Target Framework" 
               Margin="10,0,0,5"/>
    
    <TextBlock Text="✅ Avalonia UI Dependencies" 
               Margin="10,0,0,5"/>
    
    <TextBlock Text="✅ FFmpeg.AutoGen Package" 
               Margin="10,0,0,5"/>
    
    <TextBlock Text="✅ Basic Project Structure" 
               Margin="10,0,0,5"/>
    
    <TextBlock Text="Next Steps:" 
               FontWeight="Bold" 
               Margin="0,20,0,5"/>
    
    <TextBlock Text="• Convert remaining WPF code to Avalonia" 
               Margin="10,0,0,5"/>
    
    <TextBlock Text="• Implement Linux screen capture with FFmpeg" 
               Margin="10,0,0,5"/>
    
    <TextBlock Text="• Add X11 window management" 
               Margin="10,0,0,5"/>
    
    <Button Content="Close Test Window" 
            HorizontalAlignment="Center" 
            Margin="0,30,0,0"
            Click="CloseButton_Click"/>
  </StackPanel>
</Window>
